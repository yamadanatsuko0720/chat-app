<div class = "side-bar-header">
  <div class = header-name>
    <%= link_to current_user.name, edit_user_path(current_user) %>
    <%# 遷移先のパスはrails routesでeditのパスを確認 %>
  </div>
  <div class = create-room>
     <%= link_to "チャットを作成する", new_room_path %>
     <%# トップページからチャット作成画面へのリンク4854 %>
  </div>
</div>

<div class = "rooms">
  <div class = "room">
    <div class = room-name>
      <a href="#">techroom1</a>
    </div>
  </div>
  <div class = "room">
    <% current_user.rooms.each do |room| %>
    <div class="room">
      <div class="room-name">
        <a href="#"><%= room.name %></a>
      </div>
    </div>
    <%# サイドバーにチャットルーム名が表示される %>
    <%# ルームは複数作成できるのでeachメソッドくぉ使用してチャットルームを表示する作業を繰り替えす/4853 %>
  <% end %>
</div>
